/**app.wxss**/
.tips {
    height:50rpx;
    font-size: 28rpx;
    text-align: center;
    padding: 50rpx;
    color: #ccc;
}

.tips image{
    width:46rpx;
    height:46rpx;
    margin-right: 20rpx;
}

.tips text{

}

.page-header {
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #cecece;
    border-top: 1rpx solid #cecece;
}
.page-header-text{
    width: 100%;
    padding: 20rpx 40rpx;
    color: #999;
    font-size: 38rpx;
    text-align: center;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/*页标签css  */
page{
  background-color: #fff;
  height: 100%;
  width:100%;
  display: flex;
  flex-direction: column;
  font-family: -apple-system-font, 'Helvetica Neue', Helvetica, 'Microsoft YaHei', sans-serif;
}
/*body 的css  */
.page-body{
  display: flex;
  flex: 1;
  flex-direction: column;
}
/*每个cell的css  */
.cell-view {
  display: flex;
  /* flex-direction: row; */
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #cecece;
  cursor: pointer; 
}
/*image的css  */
.cell-image{
  width:128rpx;
  height:128rpx;
  margin-right: 20rpx;
}
/*内部的css  */
.inner-view{
  flex:1; 
  display: flex;
  flex-direction: column;
}
/*title的css  */
.title-text{
  font-size: 32rpx;
}
/*别名的css  */
.origin-text{
  font-size: 22rpx;
  color: #c0c0c0;
}
.title-text,.origin-text{
  margin-bottom: 15rpx;
}
/*导演的css  */
.director-text{
  font-size: 26rpx;
  color: #999;
}
/*评分的css  */
.rating-text{
  font-size: 28rpx;
  font-weight: bold;
  color: #f74c31;
  background-color: rebeccapurple;
}


